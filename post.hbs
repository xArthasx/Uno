  {{!< default}}

  {{#post}}

  <article class="post-container post-container--single">

    <header class="post-header">
      <h1 class="post-title">{{{title}}}</h1>
      <div class="post-meta">
        <i class="icon-calendar">
        </i>
        <time datetime="{{date format="DD MMM YYYY"}}" class="date">
          {{date format="DD MMM YYYY"}}
        </time>
        <span class="tags">{{tags prefix="en "}}</span>
      </div>

    </header>

    <section class="{{post_class}}">
      {{content}}
    </section>

  </article>
  <footer class="post-footer">

    <section class="author">
      <h4>{{author.name}}</h4>
      <p>{{author.bio}}</p>
    </section>

    <section class="share">
      <h4>Comparte este post</h4>
      <i class="icon-social-twitter">
        <a href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
      </i>
      <span class="hidden">Twitter</span>
    </a>
    <i class="icon-social-facebook">
      <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <span class="hidden">Facebook</span>
      </a>
    </i>
    <i class="icon-social-google-plus">
      <a  href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
        <span class="hidden">Google+</span>
      </a>
    </i>
  </section>

  {{> comments}}


</footer>
{{/post}}
